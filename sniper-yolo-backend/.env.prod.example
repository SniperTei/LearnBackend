# 生产环境配置文件示例
# 使用方法: cp .env.prod.example .env.prod
# 然后修改下面的配置项为实际值

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Sniper YOLO Backend - Production
VERSION=1.0.0
DESCRIPTION=FastAPI backend for Sniper YOLO application - Production Environment
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# Security Settings
# ⚠️ 请务必修改此密钥为强随机字符串（至少 64 位）
# 生成方法: openssl rand -base64 64
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_MINIMUM_64_CHARACTERS_LONG

ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天
ALGORITHM=HS256

# CORS Settings
# ⚠️ 请修改为你的实际域名
BACKEND_CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]

# Database Settings (PostgreSQL)
# ⚠️ 请修改数据库密码
# 生成强密码: openssl rand -base64 32
DATABASE_URL=postgresql+asyncpg://sniper:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/sniper_yolo
ALEMBIC_DATABASE_URL=postgresql+psycopg2://sniper:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/sniper_yolo

# MongoDB Settings (保留用于向后兼容)
MONGODB_URL=mongodb://mongo:27017/sniper_yolo_prod
DATABASE_NAME=sniper_yolo_prod

# YOLO Settings
YOLO_MODEL_PATH=./models/yolo.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

# 七牛云配置
# ⚠️ 请填写你的七牛云实际配置
QINIU_ACCESS_KEY=your-qiniu-access-key
QINIU_SECRET_KEY=your-qiniu-secret-key
QINIU_BUCKET_NAME=your-bucket-name
QINIU_DOMAIN=your-qiniu-domain
QINIU_DEFAULT_FOLDER=sniper-yolo-prod
QINIU_UPLOAD_URL=https://up-z2.qiniup.com
USE_HTTPS=true  # 生产环境使用 HTTPS

# 文件上传限制
MAX_FILE_SIZE=104857600  # 100MB

# 性能优化
WORKERS=4  # uvicorn workers 数量
LOG_LEVEL=INFO  # 日志级别
